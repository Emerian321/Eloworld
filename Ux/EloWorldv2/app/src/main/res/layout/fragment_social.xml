<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/social"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.social.SocialFragment">

    <ListView
        android:id="@+id/leaderboardListView"
        android:layout_width="413dp"
        android:layout_height="207dp"

        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp" />

    <ListView
        android:id="@+id/friendsListView"
        android:layout_width="414dp"
        android:layout_height="214dp"
        android:layout_marginBottom="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leaderboardListView"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_friend_btn_social"
        android:layout_width="349dp"
        android:layout_height="55dp"

        android:layout_marginBottom="152dp"
        android:background="@drawable/rounder_corner"
        android:backgroundTint="@color/teal_200"
        android:onClick="addFriendSocial"
        android:text="Ajoutez ou supprimez vos amis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_blockchain"
        android:layout_width="349dp"
        android:layout_height="55dp"

        android:layout_marginBottom="80dp"
        android:background="@drawable/rounder_corner"
        android:backgroundTint="@color/purple_200"
        android:onClick="viewBlockchain"
        android:text="Regardez la blockchain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_block_btn_social"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>